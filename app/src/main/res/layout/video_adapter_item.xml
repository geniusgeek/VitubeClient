<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/video_thumbnail_imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_thumbnail_placeholder" />

    <TextView
        android:id="@+id/video_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/video_thumbnail_imageview"
        android:layout_toEndOf="@+id/video_thumbnail_imageview"
        android:layout_toRightOf="@+id/video_thumbnail_imageview"
        android:text="@string/video_title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/video_rating_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_title_textview"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/video_thumbnail_imageview"
        android:layout_toRightOf="@+id/video_thumbnail_imageview"
        android:hint="rating"
        android:text="4.5"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff743f" />

    <Button
        android:id="@+id/video_watch_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/video_thumbnail_imageview"
        android:layout_toRightOf="@+id/video_thumbnail_imageview"
        android:background="@drawable/button_selector"
        android:elevation="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:text="@string/video_watch_str" />

    <Button
        android:id="@+id/video_download_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/video_watch_button"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_toEndOf="@+id/video_watch_button"
        android:layout_toRightOf="@+id/video_watch_button"
        android:background="@drawable/button_selector"
        android:elevation="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="0dp"
        android:text="@string/video_download_str" />

    <TextView
        android:id="@+id/video_duration_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/video_rating_textview"
        android:layout_alignStart="@+id/video_rating_textview"
        android:layout_below="@+id/video_rating_textview"
        android:layout_marginTop="10dp"
        android:hint="rating"
        android:text="45 min"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

</RelativeLayout>